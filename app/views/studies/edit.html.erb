<% provide(:title, "Edit Study") %>
<h1>Update your study</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@study) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :investigator %>
			<%= f.text_field :investigator, class: 'form-control' %>

			<%= f.submit "Update Study", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>